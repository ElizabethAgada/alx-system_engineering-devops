#!/usr/bin/env bash
# Script to install and configure HAProxy on lb-01 server
# Configures HAProxy to distribute traffic to web-01 and web-02 servers using roundrobin algorithm
# Ensures HAProxy can be managed via an init script

# Update package list
sudo apt-get -y update

# Install HAProxy
sudo apt-get -y install haproxy

# Configure HAProxy
server_config="
frontend lizzyegbo.tech-frontend
    bind *:80
    mode http
    default_backend lizzyegbo.tech-backend

backend lizzyegbo.tech-backend
    balance roundrobin
    server 176189-web-01 100.25.212.93:80 check
    server 176189-web-02 18.206.206.112:80 check
"

echo "$server_config" | sudo tee -a /etc/haproxy/haproxy.cfg

# Enable HAProxy to start with system boot
echo "ENABLED=1" | sudo tee -a /etc/default/haproxy

# Restart HAProxy service
sudo service haproxy restart
